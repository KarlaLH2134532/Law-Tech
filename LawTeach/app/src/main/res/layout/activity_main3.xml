<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/otherContainer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/pt"
            android:layout_width="425dp"
            android:layout_height="200dp"
            android:background="#F50E2370" />

    </LinearLayout>
    <ImageView
        android:id="@+id/balanza"
        android:layout_width="75dp"
        android:layout_height="120dp"
        android:background="@drawable/balanza"/>

    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo:Usuario"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/tx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido@Liliana!"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:layout_toRightOf="@+id/balanza"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF"/>

    <ImageButton
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tx2"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/white"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/lupa"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="40dp"/>

    <ImageButton
        android:id="@+id/bt6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@mipmap/mnud"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="345dp"/>

    <Button
        android:id="@+id/found"
        android:layout_width="170dp"
        android:layout_height="194dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#8FDAD3D3"
        android:visibility="gone"
        android:layout_marginLeft="235dp"/>
    <Button
        android:id="@+id/perfil"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#B48EA4F8"
        android:layout_marginTop="90dp"
        android:text="Perfil"
        android:visibility="gone"
        android:layout_marginLeft="245dp"/>
    <Button
        android:id="@+id/historial"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/perfil"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#B28EA4F8"
        android:layout_marginTop="1dp"
        android:text="Historial"
        android:visibility="gone"
        android:layout_marginLeft="245dp"/>

    <Button
        android:id="@+id/Bcita"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/historial"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#AD8EA4F8"
        android:layout_marginTop="1dp"
        android:text="BuscarCita"
        android:visibility="gone"
        android:layout_marginLeft="245dp"/>

    <Button
        android:id="@+id/Salirr"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Bcita"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#B08EA4F8"
        android:layout_marginTop="1dp"
        android:text="Salir"
        android:visibility="gone"
        android:layout_marginLeft="245dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/otherContainer2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt0"
                    android:layout_width="107dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="40dp"
                    android:background="#F5D1D9F3" />

                <ImageButton
                    android:id="@+id/bt2"
                    android:layout_width="107dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="30dp"
                    android:background="#F58EA4F8"/>



            </LinearLayout>


            <ImageView
                android:id="@+id/usuario"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="93dp"
                android:background="@drawable/usuario"/>

            <ImageView
                android:id="@+id/abogado"
                android:layout_width="102dp"
                android:layout_height="95dp"
                android:layout_marginTop="67dp"
                android:layout_marginLeft="231dp"
                android:background="@drawable/abogado"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/otherContainer2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <ImageButton
                    android:id="@+id/bt4"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="240dp"
                    android:background="#F58EA4F8" />

                <ImageButton
                    android:id="@+id/bt5"
                    android:layout_width="355dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="445dp"
                    android:background="#F58EA4F8" />

                <Button
                    android:id="@+id/foundlike"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="155dp"
                    android:layout_marginTop="255dp"
                    android:background="#F5D1D9F3" />

                <Button
                    android:layout_width="315dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="455dp"
                    android:background="#F5D1D9F3" />

                <Button
                    android:id="@+id/bt7"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="155dp"
                    android:layout_marginTop="370dp"
                    android:background="#D002F4"
                    android:text="Enviar"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/like"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="165dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuarios"
                android:layout_below="@+id/usuario"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="115dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abogado"
                android:layout_below="@+id/abogado"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="250dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cm"
                android:layout_width="315dp"
                android:layout_height="80dp"
                android:layout_marginTop="455dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="470dp"
                    android:hint="Ingrese su comentario aquÃ­"/>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_below="@id/cm"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="155dp"
                android:text="Enviar"
                android:textColor="#FFFFFF"
                android:background="#D002F4"/>

        </RelativeLayout>
</RelativeLayout>

