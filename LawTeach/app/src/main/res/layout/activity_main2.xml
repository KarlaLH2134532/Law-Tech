<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F50E2370">

    <LinearLayout
        android:id="@+id/otherContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="426dp"
            android:background="@drawable/fondos"
            android:layout_height="290dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/otherContainer"
        android:id="@+id/otherContainer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/t1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btregresar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/otherContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/t1" />

    </LinearLayout>


    <ImageView
        android:id="@+id/logoo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/image3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
    android:id="@+id/t1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/otherContainer"
    android:layout_marginTop="32dp"
    android:layout_marginLeft="35dp"
    android:textSize="30dp"
    android:text="Inicio de sesion"
    android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:textSize="12dp"
        android:text="iniciar sesion con tu cuenta de correo"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textSize="12dp"
        android:text="Email"
        android:textColor="#FFFFFF" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailEditText"
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:layout_below="@id/t3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="20dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="30dp"
        android:hint="Ingrese su correo electronico"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailEditText2"
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:layout_below="@id/t4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="20dp">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="510dp"
        android:hint="Introduce tu contrase単a" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailEditText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textSize="12dp"
        android:text="Password"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btdos"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/emailEditText2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/regres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/t1"
        android:layout_marginLeft="105dp"
        android:layout_below="@id/otherContainer" />


    <TextView
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar contrase単a"
        android:layout_below="@+id/emailEditText2"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btdos"
        android:textColor="#FFFFFF"/>

<TextView
    android:id="@+id/et2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="多Has olvidado tu contrase単a?"
    android:layout_below="@+id/et1"
    android:layout_marginLeft="35dp"
    android:layout_marginTop="22dp"
    android:textColor="#FFFFFF"/>

<Button
    android:id="@+id/bttres"
    android:layout_width="390dp"
    android:layout_height="55dp"
    android:text="Iniciar"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="22dp"
    android:background="#D002F4"
    android:layout_below="@+id/et2"
    android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/bttresS"
        android:layout_width="390dp"
        android:layout_height="55dp"
        android:text="Iniciar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="#39CD2F"
        android:visibility="gone"
        android:layout_below="@+id/et2"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btcuatro"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:text="Crear cuenta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#D002F4"
        android:layout_below="@+id/bttres"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:id="@+id/im1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image4"
        android:layout_below="@+id/cinco"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="110dp"/>

    <TextView
        android:id="@+id/et5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todos los derechos reservados"
        android:layout_below="@+id/cinco"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/im1"
        android:textColor="#FFFFFF"/>

</RelativeLayout>


